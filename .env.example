# Trankit MWE API - Environment Variables
# Copy this file to .env and adjust values as needed

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Host and port
HOST=0.0.0.0
# Internal container port (default: 80)
# Host port is configured in docker-compose.yml (default: 8406)
PORT=80

# Worker configuration
# For CPU: can use multiple workers (2 * CPU_CORES + 1)
# For GPU: MUST use 1 worker (GPU doesn't support multiple processes)
WORKERS=1
WORKERS_PER_CORE=1
MAX_WORKERS=1
WEB_CONCURRENCY=1

# =============================================================================
# GPU SETTINGS
# =============================================================================

# Enable GPU acceleration (true/false)
# Note: Requires NVIDIA GPU and nvidia-docker runtime
GPU_ENABLED=false

# =============================================================================
# LANGUAGE SETTINGS
# =============================================================================

# Default language for processing
DEFAULT_LANGUAGE=portuguese

# Comma-separated list of supported languages
# Available: portuguese, english, spanish, french, german, etc.
SUPPORTED_LANGUAGES=portuguese,english

# =============================================================================
# MWE (MULTIWORD EXPRESSION) SETTINGS
# =============================================================================

# Enable MWE recognition (true/false)
MWE_ENABLED=true

# Path to MWE database JSON file
MWE_DATABASE_PATH=data/portuguese/mwe_database.json

# Path to lemma dictionary JSON file
LEMMA_DICT_PATH=data/portuguese/lemma_dict.json

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Directory for Trankit model cache
CACHE_DIR=./cache/trankit/

# Embedding model to use
# Options: xlm-roberta-base, xlm-roberta-large
EMBEDDING_MODEL=xlm-roberta-base

# =============================================================================
# TIMEOUT SETTINGS (in seconds)
# =============================================================================

# Request timeout for processing
TIMEOUT=600

# Graceful shutdown timeout
GRACEFUL_TIMEOUT=600

# Keep-alive timeout
KEEP_ALIVE=5

# =============================================================================
# LOGGING
# =============================================================================

# Log level: debug, info, warning, error, critical
LOG_LEVEL=info

# Access log file (- for stdout, or path to file)
ACCESS_LOG=-

# Error log file (- for stderr, or path to file)
ERROR_LOG=-

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Comma-separated list of allowed origins
# Use * to allow all origins (not recommended for production)
CORS_ORIGINS=*

# =============================================================================
# API SETTINGS
# =============================================================================

# API prefix (default: /api/v1)
API_PREFIX=/api/v1

# Project name
PROJECT_NAME=trankit-mwe
